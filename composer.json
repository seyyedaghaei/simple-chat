{
    "name": "seyyedaghaei/simple-chat",
    "description": "A simple chat over HTTP(S)",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://github.com/seyyedaghaei/simple-chat",
    "license": "MIT",
    "authors": [
        {
            "name": "Seyyed Morteza SeyyedAghaei",
            "email": "sseedd524@gmail.com",
            "homepage": "https://github.com/seyyedaghaei"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "adhocore/jwt": "^1.1",
        "illuminate/database": "^9.48",
        "monolog/monolog": "^3.3",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5.27",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "migrate": "php utils/migrate.php"
    }
}
